pipeline {
    agent any

    tools {
        go 'go1.25'
    }

    environment {
        SCANNER_HOME = tool 'sonar-scanner'
        DOCKER_NAME = 'oolumee/frontend'
        IMAGE_NAME  = 'frontend'
        GO_BIN_PATH = '$(go env GOPATH)/bin'

        // CHANGE: Force BuildKit for *docker build*
        // REASON: Your Jenkins runtime is not executing a real buildx plugin (flags like --use/--bootstrap fail),
        //         and your Dockerfile needs BUILDPLATFORM which is provided by BuildKit.
        DOCKER_BUILDKIT = '1'
    }

    stages {
        stage("Clean Workspace") {
            steps {
                cleanWs()
            }
        }

        stage("Git Checkout") {
            steps {
                git branch: 'main', url: 'https://github.com/pakhtun2017/Google-microservices-devsecops-project.git'
            }
        }

        stage('Go Security Scan (gosec)') {
            steps {
                dir('src/frontend') {
                    sh '''
                        export PATH="$PATH:$(go env GOPATH)/bin"

                        if ! command -v gosec &> /dev/null; then
                            echo "Installing gosec..."
                            go install github.com/securego/gosec/v2/cmd/gosec@latest
                        fi

                        echo "Running gosec scan..."
                        gosec -fmt=sonarqube -out gosec-report.json -no-fail ./...
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts 'src/frontend/gosec-report.json'
                }
            }
        }

        stage("SonarQube Analysis") {
            steps {
                dir('src/frontend') {
                    withSonarQubeEnv('sonar-server') {
                        sh ''' $SCANNER_HOME/bin/sonar-scanner \
                            -Dsonar.projectName=frontend \
                            -Dsonar.projectKey=frontend \
                            -Dsonar.sources=. \
                            -Dsonar.language=go \
                            -Dsonar.go.gosec.reportPaths=gosec-report.json '''
                    }
                }
            }
        }

        stage("Quality Gate") {
            steps {
                script {
                    timeout(time: 3, unit: 'MINUTES') {
                        waitForQualityGate abortPipeline: true, credentialsId: 'sonar-token'
                    }
                }
            }
        }

        stage('Go Build') {
            steps {
                dir('src/frontend') {
                    sh '''
                        echo "Building Go frontend application..."
                        CGO_ENABLED=0 go build -o app .
                    '''
                }
            }
        }

        stage('Go Unit Tests') {
            steps {
                dir('src/frontend') {
                    sh '''
                        echo "Running unit tests with coverage..."
                        go test -v -coverprofile=coverage.out ./...
                    '''
                }
            }
        }

        stage('Go Dependency Check (govulncheck)') {
            steps {
                dir('src/frontend') {
                    sh '''
                        export PATH="$PATH:$(go env GOPATH)/bin"

                        if ! command -v govulncheck &> /dev/null; then
                            echo "Installing govulncheck..."
                            go install golang.org/x/vuln/cmd/govulncheck@latest
                        fi

                        export PATH="$PATH:$(go env GOPATH)/bin"

                        echo "Running govulncheck on dependencies..."
                        govulncheck ./... || true
                    '''
                }
            }
        }

        stage("Trivy File Scan") {
            steps {
                dir('src/frontend') {
                    sh '''
                        echo "Running Trivy file system scan (Plain Text Report)..."
                        trivy fs . \
                            --severity CRITICAL,HIGH \
                            --exit-code 1 \
                            --scanners vuln,misconfig,secret \
                            > trivy-fs-report.txt || true
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts 'src/frontend/trivy-fs-report.txt'
                }
            }
        }

        stage("Build Docker Image") {
            steps {
                dir('src/frontend') {
                    script {
                        // CHANGE: Set env.IMAGE_TAG here so later stages can use it
                        // REASON: Your previous build stage only set IMAGE_TAG inside the shell, so Tag/Push stage
                        //         would not reliably have env.IMAGE_TAG.
                        env.IMAGE_TAG = "${DOCKER_NAME}:${BUILD_NUMBER}"
                    }

                    sh '''
                        set -e

                        echo "Using IMAGE_TAG=${IMAGE_TAG}"
                        echo "DOCKER_BUILDKIT=${DOCKER_BUILDKIT}"

                        # CHANGE: Make cleanup non-fatal (images may not exist on fresh agents)
                        # REASON: docker rmi returns non-zero if image doesn't exist; we don't want that to fail the build.
                        docker rmi -f frontend:latest "${IMAGE_TAG}" >/dev/null 2>&1 || true

                        # CHANGE: Use docker build (BuildKit enabled via DOCKER_BUILDKIT=1)
                        # REASON: buildx flags are failing in Jenkins runtime, but BuildKit still provides BUILDPLATFORM.
                        docker build -t frontend:latest .

                        docker tag frontend:latest "${IMAGE_TAG}"
                    '''
                }
            }
        }

        stage("Tag & Push to DockerHub") {
            steps {
                dir('src/frontend') {
                    withCredentials([string(credentialsId: 'docker-cred', variable: 'dockerpwd')]) {
                        sh '''
                            set -e
                            echo "$dockerpwd" | docker login -u oolumee --password-stdin

                            docker push "${IMAGE_TAG}"

                            # Also push latest
                            docker tag frontend:latest "${DOCKER_NAME}:latest"
                            docker push "${DOCKER_NAME}:latest"
                        '''
                    }
                }
            }
        }

        stage("Trivy Scan Image") {
            steps {
                dir('src/frontend') {
                    sh '''
                        set -e
                        echo "üîç Running Trivy scan on ${IMAGE_TAG}"

                        trivy image -f json  -o trivy-image-frontend.json "${IMAGE_TAG}"
                        trivy image -f table -o trivy-image-frontend.txt  "${IMAGE_TAG}"
                    '''
                }
            }
        }
    }

    post {
        always {
            dir('src/frontend') {
                script {
                    def buildStatus = currentBuild.currentResult
                    def buildUser = currentBuild.getBuildCauses('hudson.model.Cause$UserIdCause')[0]?.userId ?: 'Github User'

                    emailext (
                        subject: "Pipeline ${buildStatus}: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                        body: """
                            <p>Frontend Google-Shop DevSecops pipeline status.</p>
                            <p>Youtube Link :- https://www.youtube.com/@devopsHarishNShetty </p>
                            <p>Project: ${env.JOB_NAME}</p>
                            <p>Build Number: ${env.BUILD_NUMBER}</p>
                            <p>Build Status: ${buildStatus}</p>
                            <p>Started by: ${buildUser}</p>
                            <p>Build URL: <a href="${env.BUILD_URL}">${env.BUILD_URL}</a></p>
                        """,
                        to: 'oolumee@gmail.com',
                        from: 'oolumee@gmail.com',
                        mimeType: 'text/html',

                        // OPTIONAL NOTE: These files live under src/frontend in your workspace.
                        // If attachments don‚Äôt show up, change patterns to:
                        // 'src/frontend/trivy-fs-report.txt,src/frontend/trivy-image-frontend.json,...'
                        attachmentsPattern: 'trivy-fs-report.txt,trivy-image-frontend.json,trivy-image-frontend.txt,gosec-report.json'
                    )
                }
            }
        }
    }
}

